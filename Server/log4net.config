<?xml version="1.0" encoding="utf-8"?>
<log4net>
    <appender name="Test" type="log4net.Appender.RollingFileAppender">
        <file value="D:\errorlogs\Test\Test.log" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="0" />
        <maximumFileSize value="6MB" />
        <layout type="log4net.Layout.PatternLayout, log4net">
            <param name="ConversionPattern" value="[%utcdate] [%level] %message %n" />
        </layout>
    </appender>
    
    <appender name="LogEntriesAppender" type="log4net.Appender.LogentriesAppender, LeLog4net">
        <Debug value="true" />
        <HttpPut value="false" />
        <Ssl value="false" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%d{ddd MMM dd HH:mm:ss zzz yyyy} %logger %: %level%, %m, " />
        </layout>
    </appender>
    
    <logger name="AsteroidsLog">
        <appender-ref ref="Test" />
        <level value="ALL"/>
    </logger>
</log4net>